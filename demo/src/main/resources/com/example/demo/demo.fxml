<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="300.0" spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.CalculatorController">
  <padding>
    <javafx.geometry.Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
  </padding>
  <TextField fx:id="displayTextField" alignment="CENTER_RIGHT" editable="false" prefHeight="50.0" promptText="0" style="-fx-font-size: 20;"/>

  <GridPane hgap="10" vgap="10">
    <Button text="7" onAction="#processDigit" prefWidth="50.0" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <Button text="8" onAction="#processDigit" prefWidth="50.0" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <Button text="9" onAction="#processDigit" prefWidth="50.0" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
    <Button text="/" onAction="#processOperator" prefWidth="50.0" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

    <Button text="4" onAction="#processDigit" prefWidth="50.0" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <Button text="5" onAction="#processDigit" prefWidth="50.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Button text="6" onAction="#processDigit" prefWidth="50.0" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
    <Button text="*" onAction="#processOperator" prefWidth="50.0" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

    <Button text="1" onAction="#processDigit" prefWidth="50.0" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <Button text="2" onAction="#processDigit" prefWidth="50.0" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Button text="3" onAction="#processDigit" prefWidth="50.0" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
    <Button text="-" onAction="#processOperator" prefWidth="50.0" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

    <Button text="0" onAction="#processDigit" prefWidth="50.0" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <Button text="." onAction="#processDigit" prefWidth="50.0" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <Button text="=" onAction="#processOperator" prefWidth="50.0" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
    <Button text="+" onAction="#processOperator" prefWidth="50.0" GridPane.columnIndex="3" GridPane.rowIndex="3"/>

    <Button text="C" onAction="#clearDisplay" prefWidth="50.0" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <Button text="+/-" onAction="#processOperator" prefWidth="50.0" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <Button text="%" onAction="#processOperator" prefWidth="50.0" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
  </GridPane>
</VBox>
